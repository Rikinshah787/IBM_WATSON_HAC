# ============================================
# IBM watsonx.ai Configuration (Virtual Orchestrator)
# ============================================

# Your IBM Cloud API Key
WATSONX_AI_API_KEY=your_ibm_cloud_api_key_here

# watsonx.ai URL
# US South: https://us-south.ml.cloud.ibm.com
WATSONX_AI_URL=https://us-south.ml.cloud.ibm.com

# Your watsonx.ai Project ID
WATSONX_AI_PROJECT_ID=your_project_id_here

# Model to use (Granite)
# Recommended: ibm/granite-3-8b-instruct
WATSONX_AI_MODEL_ID=ibm/granite-3-8b-instruct

# ============================================
# Application Configuration
# ============================================

# Enable debug mode
DEBUG=True

# Backend server port
BACKEND_PORT=8000

# CORS origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
