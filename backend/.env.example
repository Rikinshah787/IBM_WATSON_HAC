# ============================================
# IBM watsonx Orchestrate Configuration
# ============================================
# Get these from: https://cloud.ibm.com/watsonx/orchestrate

# Your IBM Cloud API Key (IAM API Key)
WATSONX_ORCHESTRATE_API_KEY=your_ibm_cloud_api_key_here

# watsonx Orchestrate URL (usually one of these):
# US South: https://us-south.ml.cloud.ibm.com
# EU: https://eu-de.ml.cloud.ibm.com
# UK: https://eu-gb.ml.cloud.ibm.com
WATSONX_ORCHESTRATE_URL=https://us-south.ml.cloud.ibm.com

# Your watsonx Orchestrate Project ID
# Find this in your watsonx Orchestrate project settings
WATSONX_ORCHESTRATE_PROJECT_ID=your_project_id_here

# Your watsonx Orchestrate Instance ID (CRN)
# Format: crn:v1:bluemix:public:pm-20:us-south:a/...
WATSONX_ORCHESTRATE_INSTANCE_ID=your_instance_crn_here

# ============================================
# IBM watsonx.ai Configuration (Optional)
# ============================================
# For advanced AI reasoning with Granite models

# Same as your IBM Cloud API Key (can be the same as above)
WATSONX_AI_API_KEY=your_ibm_cloud_api_key_here

# watsonx.ai URL (usually same region as Orchestrate)
WATSONX_AI_URL=https://us-south.ml.cloud.ibm.com

# Your watsonx.ai Project ID (may be same as Orchestrate Project ID)
WATSONX_AI_PROJECT_ID=your_watsonx_ai_project_id_here

# Model to use (recommended: IBM Granite models)
# Options: ibm/granite-13b-chat-v2, ibm/granite-13b-instruct-v2
WATSONX_AI_MODEL_ID=ibm/granite-13b-chat-v2

# ============================================
# Application Configuration
# ============================================

# Enable debug mode (True for development, False for production)
DEBUG=True

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Backend server port
BACKEND_PORT=8000

# CORS origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Mock mode (True to use mock data without real API calls)
# Set to False when you have valid credentials
USE_MOCK_MODE=False

# ============================================
# Optional: Advanced Settings
# ============================================

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Max retries for API calls
MAX_RETRIES=3

# Enable detailed API logging
ENABLE_API_LOGGING=True
